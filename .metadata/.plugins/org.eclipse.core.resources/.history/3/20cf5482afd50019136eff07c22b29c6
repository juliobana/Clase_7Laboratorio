}

int getInt(	int *pResultado,
			char *pMensaje,
			char *pMensajeError,
			int minimo,
			int maximo,
			int reintentos)
{
	int retorno = -1;
	int buffer;
	char numero[64];
	do
	{
		printf("%s",pMensaje);
		fflush(stdin);

		//scanf("%d",&buffer)==1
		fgets();
		//validar() // no haya caracteres con letras 09A7
		buffer = atoi(numero);

		if(buffer >= minimo && buffer <= maximo)
		{
			*pResultado = buffer;
			retorno = 0;
			break;
		}
		printf("%s",pMensajeError);
		reintentos--;
	}while(reintentos >= 0);
	return retorno;
}
